docker run \
	--rm -it \
	--network="host" \
	-p 8080:8080 \
	-e HTTP_PROXY=$HTTP_PROXY \
	-e HTTPS_PROXY=$HTTP_PROXY \
	-e http_proxy=$HTTP_PROXY \
	-e https_proxy=$HTTP_PROXY \
	-e no_proxy=$no_proxy \
	-e NO_PROXY=$no_proxy \
	-e SAUCE_USERNAME=$SAUCE_USERNAME \
	-e SAUCE_ACCESS_KEY=$SAUCE_ACCESS_KEY \
	-v /etc/hosts:/etc/hosts \
	ustwo/sauce-connect \
		--proxy $proxy_host \
		--proxy-userpwd $STC_PROXY_USER:$STC_PROXY_PASS \
		--se-port 8080 \
		--proxy-tunnel
